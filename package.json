{
  "name": "charis-cli",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "charis": "bin/charis.ts"
  },
  "scripts": {
    "dev": "bun run bin/charis.ts",
    "build:bin": "bun build bin/charis.ts --compile --outfile charis",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "bun run typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release:prepare": "bun install --frozen-lockfile && bun run build:bin"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.17",
    "@google/genai": "^1.21.0",
    "ai": "^3.4.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "keytar": "^7.9.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "sharp": "^0.33.2",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.12.7",
    "bun-types": "^1.2.23",
    "typescript": "^5.6.3"
  }
}
